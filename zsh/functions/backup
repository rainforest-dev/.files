# check whether file exists in home directory
# if it does, backup the file with BACKUP_EXTENSION(default: .bakup)
backup() {
  local file=$1
  local backup_extension=${2:-bakup}
  if [ -f "$HOME/$file" ]; then
    echo "File $file already exists in $HOME. Backup..."
    mv $HOME/$file $HOME/$file.$backup_extension
  fi
}